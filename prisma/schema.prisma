generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}
 
model User {
  id        Int      @id @default(autoincrement())
  firstName      String
  lastName String
  email     String   @unique
  image     String
  password String
  createdAt DateTime @default(now())
}
model Meals{
  id Int @id @default(autoincrement())
  imageUrl String
  title String
  category String
  price Int
}
model Corktail{
  id Int @id @default(autoincrement())
  title String
  category String
  price Int
}
model Beer{
  id Int @id @default(autoincrement())
  title String
  category String
  price Int
}
model reservation{
  id Int @id @unique @default(autoincrement())
  date DateTime @default(now())
  numberOfPersons String
  purpose String?
  name String
  userId String
  meal Meal
}
enum Meal{
  fried_rice
  jollof_rice
  Egusi
  Afang
  Edikiakong
  Banga
  Bitter_leaf
  Efo
  Ewedu
  Ogbono
}